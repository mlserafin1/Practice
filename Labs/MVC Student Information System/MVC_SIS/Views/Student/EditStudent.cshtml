@model Exercises.Models.ViewModels.StudentVM
@{
    ViewBag.Title = "EditStudent";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit Student</h3>
        @Html.ActionLink("Return to List", "List", "Student")
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-6">
                <h3>Edit Student</h3>
                <div class="row">
                    @Html.ValidationSummary()
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(m => m.Student.StudentId)
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Personal Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Student.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Student.LastName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems,new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control" })
                                    </div>
                                    <h4>Courses</h4>
                                    <div class="form-group">
                                        @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                                    </div>
                                    <button class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    }
                    
                </div>
                
            </div>
            
            <div class="col-xs-6">
            <h3>Edit Address</h3>
            @using (Html.BeginForm("EditAddress", "Student", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Student.StudentId)
                <div class="col-xs-12 col-sm-7">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h4 class="panel-title">Address</h4>
                        </div>
                        <div class="panel-body">

                            <h4>Address</h4>
                            <div>
                                <label>Street 1:</label>
                                @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control" })
                            </div>
                            <div>
                                <label>Street 2:</label>
                                @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control" })
                            </div>
                            <div>
                                <label>City:</label>
                                @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control" })
                            </div>
                            <div>
                                <label>State Abbreviation:</label>
                                @Html.TextBoxFor(m => m.Student.Address.State.StateAbbreviation, new { @class = "form-control" })
                            </div>
                            <div>
                                <label>State Name:</label>
                                @Html.TextBoxFor(m => m.Student.Address.State.StateName, new { @class = "form-control" })
                            </div>
                            <div>
                                <label>Postal Code:</label>
                                @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control" })
                            </div>
                            <button class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
        
        
    </div>
    
</div>
