@model CarDealership.UI.Models.SalesReportViewModel

@{
    ViewBag.Title = "Sales";
}

<h2>Sales Report</h2>

@using (Html.BeginForm("Sales", "Reports", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmSalesReports" }))
{
    <div style="border:1px solid">
        <div class="row" style="margin-top:5px;">
            <div class="col-xs-2" style="margin-left:10px">
                @Html.DropDownListFor(m => m.Parameters.UserId, Model.Users, "-All-", new { @class = "form-control" })
            </div>
            <div class="col-xs-1"><p>From Date</p></div>
            <div class="col-xs-2">
                @Html.TextBoxFor(m => m.Parameters.MinDate)
            </div>
            <div class="col-xs-1"><p>To Date</p></div>
            <div class="col-xs-2">
                @Html.TextBoxFor(m => m.Parameters.MaxDate)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3" style="margin-left:10px; margin-top:5px; margin-bottom:5px;">
                <button class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>
}

<br/>

@if (Model.Sales != null)
{
    <table border="1">
        <tr>
            <th>User</th>
            <th>Total Sales</th>
            <th>Total Vehicles</th>
        </tr>
        @foreach (var m in Model.Sales)
        {
            <tr>
                <td>@m.User</td>
                <td>@m.TotalSales</td>
                <td>@m.TotalVehicles</td>
            </tr>
        }
    </table>
}
