@model IEnumerable<CarDealership.Models.Queries.VehicleViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron saleBackground">
    <h1 style="color:white;">Sales! Sales! Sales!</h1>
</div>

<div class="row">
    <div class="col-xs-12">
        <h1>Featured Vehicles</h1><hr/>
            @foreach (var car in Model)
            {
                <a href='@Url.Action("Details", "Inventory", new { id = car.VehicleId })'>
                    <div class="col-xs-11 col-sm-5 col-md-3 featuredVehicle" style="border:1px solid; margin-right:20px; margin-bottom:20px;">
                        <p><img src="@Url.Content("~/Images/" + car.PictureFileName)" /></p>
                        <p>@car.Year @car.Make @car.Model</p>
                        <p>@car.Price.ToString("c")</p>
                    </div>
                </a>
            }
</div>
</div>