@model CarDealership.Models.Queries.VehicleViewModel

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Delete Vehicle</h2>

<div class="container" style="border:1px solid;">
    <div class="row">
        <div class="col-xs-3" style="margin-left:20px; margin-top:5px">
            <p>@Model.Year @Model.Make @Model.Model</p>
        </div>
        <div class="col-xs-9"></div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <p><img src="@Url.Content("~/Images/" + Model.PictureFileName)" /></p>
        </div>
        <div class="col-xs-3">
            <p>Body Style: @Model.BodyStyle</p>
            <p>Trans: @Model.Transmission</p>
            <p>Color: @Model.Color</p>
        </div>
        <div class="col-xs-3">
            <p>Interior: @Model.Interior</p>
            <p>Mileage: @Model.Mileage</p>
            <p>VIN #: @Model.Vin</p>
        </div>
        <div class="col-xs-3">
            <p>Sale Price: $@Model.Price</p>
            <p>MSRP: $@Model.Msrp</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-9">
            <p>Description: @Model.Description</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-9"></div>
    <div class="col-xs-3">
        <p>Are you sure you want to delete this vehicle?</p>
        <p>@Html.ActionLink("Yes", "Delete", "Admin", new { id = Model.VehicleId }, null)  |  @Html.ActionLink("No", "Vehicles", "Admin")</p>
    </div>
</div>