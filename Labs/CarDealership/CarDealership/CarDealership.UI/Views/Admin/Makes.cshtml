@model IEnumerable<CarDealership.Models.Tables.Make>

@{
    ViewBag.Title = "Add Make";
}

<h2>Makes</h2>
<div class="row" style="border:1px solid">
    <div class="col-xs-1" style="margin-top:10px;">
        <p>New Make</p>
    </div>
@using (Html.BeginForm("Makes", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddmake" }))
{
        <div class="col-xs-3" style="margin-top:7px;">
            <input type="text" id="make" name="make" />
        </div>
        <div class="col-xs-1" style="margin-top:3px;">
            <button class="btn btn-primary">Save</button>
        </div>
}
</div>
<br/><br/>
<table border="1">
    <tr>
        <th>Make</th>
        <th>Date Added</th>
        <th>User</th>
    </tr>
    @foreach(var m in Model)
    {
        <tr>
            <td>@m.MakeName</td>
            <td>@m.DateAdded</td>
            <td>@m.UserId</td>
        </tr>
    }
</table>